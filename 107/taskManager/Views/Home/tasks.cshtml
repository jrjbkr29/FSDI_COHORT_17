@{
    ViewData["Title"] = "Tasks";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" ;
    integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">

<link rel="stylesheet" href="/css/app.css">

<body>
    <main class="container">
        <div class="body">
            <section id="list">
                <h3>Your Tasks</h3>
                <a href="#openDetailsButton">[+]</a>

                <div id="pendingTasks">
                    <!-- display tasks here-->
                </div>
            </section>
            <button id="openDetailsButton" type="button" class="btn btn-outline-dark">Create New Task</button>

            <section id="details" class="hide">
                <button id="closeDetailsButton" type="button" class="btn btn-outline-dark">Close</button>
                <h3>Create New Task</h3>

                <div class="control">
                    <label>ID:</label>
                    <input id="txtId" readonly type="text" class="form-control">
                </div>

                <div class="control">
                    <label>Title:</label>
                    <input id="txtTitle" type="text" class="form-control">

                    <div id="alertTitle" class="alert alert-warning hide" role="alert">
                        <b>Error:</b> Title should be at least 3 characters long.
                    </div>
                </div>

                <div class="control">
                    <label>Description:</label>
                    <input id="txtDescription" type="text" class="form-control">
                    <div id="alertDesc" class="alert alert-warning hide" role="alert">
                        <b>Error:</b> Description should be empty or at least 5 characters long.
                    </div>
                </div>

                <div class="control">
                    <i id="iconImp" class="far fa-star"></i>
                    <label>Important</label>
                </div>

                <div class="control">
                    <label>Due Date:</label>
                    <input id="txtDueDate" type="date" class="form-control">
                </div>

                <div class="control">
                    <label>Location:</label>
                    <input id="txtLocation" type="text" class="form-control">
                </div>

                <div class="control">
                    <label>Alert Text:</label>
                    <input id="txtAlertText" type="text" class="form-control">
                </div>

                <div class="control">
                    <label>Status:</label>
                    <select id="selStatus" class="form-control">
                        <option value="0" disabled selected>--Select Status--</option>
                        <option value="1">Pending</option>
                        <option value="2">In Progress</option>
                        <option value="3">Blocked</option>
                        <option value="4">Done</option>
                    </select>
                    <div id="alertStatus" class="alert alert-warning hide" role="alert">
                        <b>Error:</b> Please select a status.
                    </div>
                </div>

                <div class="control">
                    <button id="btnSave" class="btn btn-primary">Save Task</button>

                </div>
                <div id="alertSuccess" class="alert alert-success hide" role="alert">
                    Task submitted!
                </div>
                <div id="alertError" class="alert alert-danger hide" role="alert">
                    Error: Task not submitted!
                </div>
            </section>
        </div>
    </main>
    <script src="/js/task.js"></script>
    <script src="/js/app.js"></script>
</body>
